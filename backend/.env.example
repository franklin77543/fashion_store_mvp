# Database Configuration
DATABASE_URL=sqlite:///./fashion_store.db

# App Settings
APP_NAME=Fashion Store MVP
API_V1_PREFIX=/api/v1
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated URLs)
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# Image Settings
IMAGE_BASE_PATH=../fashion-dataset/images

# Ollama Settings (for AI features in Phase 3)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
